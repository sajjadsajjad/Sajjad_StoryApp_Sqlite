<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.storyapp" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StoryActivity"
            android:label="@string/title_activity_story"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".StoryListActivity"
            android:label="@string/title_activity_story_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".StoryListAdapter"
            android:label="@string/title_activity_story_list_adapter"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".CustomArrayAdapter"
            android:label="@string/title_activity_custom_array_adapter"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".AdapterActivity"
            android:label="@string/title_activity_adapter"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".FinalActivity"
            android:label="@string/title_activity_final"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
